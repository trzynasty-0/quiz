<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/obrazek1"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/knight" />

    <TextView
        android:id="@+id/trescPytanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/text"
        android:layout_marginBottom="32dp"
        android:text="treść pytania"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/tak"
            android:textColor="@color/text"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="TAK" />

        <Button
            android:id="@+id/button4"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/nie"
            android:textColor="@color/text"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="NIE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/guzik"
            android:text="Podpowiedź"
            android:textColor="@color/text"
            android:layout_margin="8dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/guzik"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:layout_margin="8dp"

            android:text="Następne" />
    </LinearLayout>

</LinearLayout>